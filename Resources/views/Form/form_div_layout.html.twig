{% block form_row %}
{% spaceless %}
    <div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
        {{ form_label(form, label|default(null), {'label_attr' : {'class' : 'col-lg-2 control-label'} }) }}
        <div class="col-lg-10">
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block collection_widget -%}
    {% if prototype is defined %}
        {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
    {% endif %}
    {%- set attr = attr|merge({'data-allow-add': form.vars.allow_add }) -%}
    {%- set attr = attr|merge({'data-allow-delete': form.vars.allow_delete }) -%}
    {%- set attr = attr|merge({'data-prototype-name': form.vars.prototype_name }) -%}
    {{- block('form_widget') -}}
{%- endblock collection_widget %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <span class="help-block">{{ error.message }}</span>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_widget_simple %}
{% spaceless %}
    {% set type = type|default('text') %}
    {% set attr = 'class' in attr|keys ? attr|merge({'class' : attr.class ~ ' form-control'}) : attr|merge({'class' : 'form-control'}) %}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endspaceless %}
{% endblock form_widget_simple %}

{% block textarea_widget %}
{% spaceless %}
    {% set attr = 'class' in attr|keys ? attr|merge({'class' : attr.class ~ ' form-control'}) : attr|merge({'class' : 'form-control'}) %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endspaceless %}
{% endblock %}

{% block choice_widget %}
{% spaceless %}
    {% if expanded %}
        {{ block('choice_widget_expanded') }}
    {% else %}
        {% set attr = 'class' in attr|keys ? attr|merge({'class' : attr.class ~ ' form-control'}) : attr|merge({'class' : 'form-control'}) %}
        {{ block('choice_widget_collapsed') }}
    {% endif %}
{% endspaceless %}
{% endblock choice_widget %}

{% block checkbox_widget %}
{% spaceless %}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{% endspaceless %}
{% endblock checkbox_widget %}

{% block checkbox_row %}
{% spaceless %}
    <div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
        <div class="col-lg-offset-2 col-lg-10">
            <div class="checkbox">
                <label>
                    {{ form_widget(form) }} {{ form.vars.label|trans({}, translation_domain) }}
                </label>
            </div>
            {{ form_errors(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock checkbox_row %}

{% block datetime_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        <div {{ block('widget_container_attributes') }}>
            <div class="row">
                <div class="col-lg-6">
                    {{ form_errors(form.date) }}
                    {{ form_widget(form.date) }}
                </div>
                <div class="col-lg-4 col-lg-offset-2">
                    {{ form_errors(form.time) }}
                    {{ form_widget(form.time) }}
                </div>
            </div>
        </div>
    {% endif %}
{% endspaceless %}
{% endblock datetime_widget %}

{% block date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        {% set attr = 'class' in attr|keys ? attr|merge({'class' : attr.class ~ ' row'}) : attr|merge({'class' : 'row'}) %}
        <div {{ block('widget_container_attributes') }}>
            {{ date_pattern|replace({
            '{{ year }}':  '<div class="col-lg-4">' ~ form_widget(form.year) ~ '</div>',
            '{{ month }}': '<div class="col-lg-4">' ~ form_widget(form.month) ~ '</div>',
            '{{ day }}':   '<div class="col-lg-4">' ~ form_widget(form.day) ~ '</div>',
            })|raw }}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock date_widget %}

{% block time_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        {% set attr = 'class' in attr|keys ? attr|merge({'class' : attr.class ~ ' row'}) : attr|merge({'class' : 'row'}) %}
        {% set vars = widget == 'text' ? { 'attr': { 'size': 1 }} : {} %}
        <div {{ block('widget_container_attributes') }}>
            <div class="col-lg-6">{{ form_widget(form.hour, vars) }}{% if with_minutes %}</div><div class="col-lg-6">{{ form_widget(form.minute, vars) }}{% endif %}{% if with_seconds %}:{{ form_widget(form.second, vars) }}{% endif %}</div>
        </div>
    {% endif %}
{% endspaceless %}
{% endblock time_widget %}
