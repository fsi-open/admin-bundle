{% extends admin_templates_base %}

{% block themes %}
    {% form_theme form admin_templates_resource_form_theme %}
{% endblock themes %}

{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>{{ title|trans }}</h3>
                <form action="{{ path('fsi_admin_resource', {element: element.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-default">{{ 'resource.button.save'|trans({}, 'FSiAdminBundle')  }}</button>
                            <button type="reset" class="btn btn-primary">{{ 'resource.button.reset'|trans({}, 'FSiAdminBundle')  }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}