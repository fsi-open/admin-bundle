{% extends admin_templates_base %}

{% block themes %}
    {% form_theme form admin_templates_edit_form_theme %}
{% endblock themes %}

{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                {% if form.vars.data.__toString() is defined %}
                <h3>{{ title|trans({'%element%': form.vars.data}) }}</h3>
                {% else %}
                <h3>{{ title|trans }}</h3>
                {% endif %}
                <form action="{{ path('fsi_admin_crud_edit', {element: element.id, id: id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-default">{{ 'crud.edit.button.save'|trans({}, 'FSiAdminBundle')  }}</button>
                            <button type="reset" class="btn btn-primary">{{ 'crud.edit.button.reset'|trans({}, 'FSiAdminBundle')  }}</button>
                            {% if app.request.query.has('redirect_uri') %}
                            <a class="btn btn-info pull-right" href="{{ app.request.query.get('redirect_uri') }}">{{ 'crud.edit.button.back_to_list'|trans({}, 'FSiAdminBundle')  }}</a>
                            {% endif %}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}