<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin.group.class">FSi\Bundle\AdminBundle\Structure\Group</parameter>
        <parameter key="admin.group.manager.class">FSi\Bundle\AdminBundle\Structure\GroupManager</parameter>
    </parameters>

    <services>
        <service id="admin.group.manager" class="%admin.group.manager.class%">
            <argument type="collection"/>
        </service>

        <service id="admin.structure.element.param.converter"
                 class="FSi\Bundle\AdminBundle\Request\ParamConverter\StructureElementParamConverter">
            <argument type="service" id="admin.group.manager" />

            <tag name="request.param_converter" converter="structure.element" priority="10" />
        </service>

        <service id="admin.structure.admin_element.param.converter"
                 class="FSi\Bundle\AdminBundle\Request\ParamConverter\StructureAdminElementParamConverter">
            <argument type="service" id="admin.group.manager" />

            <tag name="request.param_converter" converter="structure.admin_element" priority="10" />
        </service>

        <service id="admin.structure.doctrine_admin_element.param.converter"
                 class="FSi\Bundle\AdminBundle\Request\ParamConverter\StructureDoctrineAdminElementParamConverter">
            <argument type="service" id="admin.group.manager" />

            <tag name="request.param_converter" converter="structure.doctrine_admin_element" priority="10" />
        </service>

         <service id="admin.twig.extension" class="FSi\Bundle\AdminBundle\Twig\Extension\AdminExtension" public="false">
            <tag name="twig.extension" />
            <argument type="collection">
                <argument key="admin_templates_base">%admin.templates.base%</argument>
                <argument key="admin_templates_datagrid_theme">%admin.templates.datagrid_theme%</argument>
                <argument key="admin_templates_datasource_theme">%admin.templates.datasource_theme%</argument>
                <argument key="admin_templates_edit_form_theme">%admin.templates.edit_form_theme%</argument>
                <argument key="admin_templates_create_form_theme">%admin.templates.create_form_theme%</argument>
                <argument key="admin_templates_delete_form_theme">%admin.templates.delete_form_theme%</argument>
            </argument>
        </service>

    </services>

</container>