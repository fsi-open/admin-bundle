<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin.resource.context.class">FSi\Bundle\AdminBundle\Admin\ResourceRepository\Context\ResourceRepositoryContext</parameter>
        <parameter key="admin.resource.context.form_builder.class">FSi\Bundle\AdminBundle\Admin\ResourceRepository\ResourceFormBuilder</parameter>
        <parameter key="admin.resource.context_builder.class">FSi\Bundle\AdminBundle\Admin\ResourceRepository\Context\ResourceRepositoryContextBuilder</parameter>
        <parameter key="admin.resource.context.request_handler.form_submit.class">FSi\Bundle\AdminBundle\Admin\ResourceRepository\Context\Request\FormSubmitHandler</parameter>
        <parameter key="admin.resource.context.request_handler.form_valid_request.class">FSi\Bundle\AdminBundle\Admin\ResourceRepository\Context\Request\FormValidRequestHandler</parameter>
    </parameters>

    <services>
        <service id="admin.resource.context_builder" class="%admin.resource.context_builder.class%">
            <argument type="service" id="admin.resource.context"/>
            <tag name="admin.context.builder" />
        </service>

        <service id="admin.resource.context.form_builder" class="%admin.resource.context.form_builder.class%">
            <argument type="service" id="form.factory"/>
            <argument type="service" id="fsi_resource_repository.resource.map_builder"/>
        </service>

        <service id="admin.resource.context" class="%admin.resource.context.class%">
            <argument type="collection">
                <argument type="service" id="admin.resource.context.request_handler.form_submit"/>
                <argument type="service" id="admin.resource.context.request_handler.form_valid_request"/>
            </argument>
            <argument type="service" id="admin.resource.context.form_builder" />
        </service>

        <service id="admin.resource.context.request_handler.form_submit"
                 class="%admin.resource.context.request_handler.form_submit.class%">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="admin.resource.context.request_handler.form_valid_request"
                 class="%admin.resource.context.request_handler.form_valid_request.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="router" />
        </service>
    </services>
</container>
